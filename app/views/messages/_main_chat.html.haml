.chat-main
  .group-info
    .group-info__title
      = @group.name
      .group-info__member
        = "Member : #{@group.user_ids}"
    .edit
      = link_to edit_group_path(@group), class: "edit__icon" do
        Edit
  .messages
    = render @messages
  .form
    .new-message
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'image' do
            %i.fa.fa-image
            = f.file_field :image, class: 'image__file'
          = f.submit 'Send', class: 'submit-btn'